<!DOCTYPE html>
<html lang="es">
    <%- include( '../partials/head') %>

    <body>
        <%- include('../partials/header') %>

        <main class="home">
            <section class="banner">
                <div>
                   <img src="images/carrusel-mood.PNG" alt="" class="img-banner">
               </div>
           </section>
   
           <section class="populares">
               <div class="popular-now">
                   <h1 class="tittle-popu">Popular ahora</h1>
                   <div class="btn-popu">
                        <a href="/products/filter?category=Blusas" class="style-button">
                            Blusas  
                        </a>
                        <a href="/products/filter?category=Jeans" class="style-button">
                            Jeans 
                        </a>
                        <a href="/products/filter?category=Shorts" class="style-button">
                            Shorts 
                        </a>
                        <a href="/products/filter?category=Vestidos" class="style-button">
                            Vestidos 
                        </a>
                   </div>
               </div>
           </section>
            <section class>
                <div class="products">
                    <article>
                        <a href="/products/filter?category1=Blusas&category2=Remeras">
                            <img src="images/blusa.PNG" alt="Blusas y remeras" class="product_img">
                            <div class="main-article">
                                <h4 class="description">BLUSAS Y REMERAS</h4>
                            </div>
                        </a>
                    </article>
                    <article>
                        <a href="/products/filter?category1=Vestidos&category2=Monos">
                            <img src="images/vestido.PNG" alt="Vestidos y monos" class="product_img">
                            <div class="main-article">
                                <h4 class="description">VESTIDOS Y MONOS</h4>
                            </div>
                        </a>
                    </article>
                    <article>
                        <a href="/products/filter?category1=Shorts&category2=Faldas">
                            <img src="images/short.PNG" alt="Teléfono Móvil Samsung Galaxy" class="product_img">
                            <div class="main-article">
                                <h4 class="description">SHORTS Y FALDAS</h4>
                            </div>
                        </a>
                    </article>
                    <article>
                        <a href="/products/filter?category1=Jeans&category2=Pantalones">
                            <img src="images/jean.PNG" alt="SmartTv Samsung" class="product_img">
                            <div class="main-article">
                                <h4 class="description">JEANS Y PANTALONES</h4>
                            </div>
                        </a>
                    </article>
                </div>

                <h1 class="estilos-productos">Estilos</h1>
                <div class="products">
                    <article>
                        <a href="/products/filter?styles=Casual">
                            <img src="images/casual-style.PNG" alt="Blusas y remeras" class="product_img">
                            <div class="main-article">
                                <h4 class="description">CASUAL</h4>
                            </div>
                        </a>
                    </article>
                    <article>
                        <a href="/products/filter?styles=Trendy">
                            <img src="images/trendy-style.PNG" alt="Vestidos y monos" class="product_img">
                        <div class="main-article">
                            <h4 class="description">TRENDY</h4>
                        </div>
                        </a>
                    </article>
                    <article>
                        <a href="/products/filter?styles=Minimalista">
                            <img src="images/minimalista-style.PNG" alt="Teléfono Móvil Samsung Galaxy" class="product_img">
                            <div class="main-article">
                                <h4 class="description">MINIMALISTA</h4>
                            </div>
                        </a>
                    </article>
                    <article>
                        <a href="/products/filter?styles=Hipster">
                            <img src="images/hipster-style.PNG" alt="SmartTv Samsung" class="product_img">
                            <div class="main-article">
                                <h4 class="description">HIPSTER</h4>
                            </div>
                        </a>
                    </article>
                </div>
            </section>
        </main>
        <%- include('../partials/footer') %> 
       
    </body>
</html>