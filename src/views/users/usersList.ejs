<!DOCTYPE html>
<html lang="es">
    <%- include( '../partials/head') %>
    
    <body>
    
        <%- include('../partials/header') %>

        <main class="usersList">
            <h2 class="title"> Lista de Usuarios </h2>
            <section class="users">
                    <% users.forEach(element => { %>
                            <article>
                                <a href="/users/<%= element.id  %> ">
                                    <% let urlImg = 'default.png' %>  
                                    <% imgs.forEach(img=>{%>
                                        <% if(img.idUsers == element.id){ %>
                                            <% urlImg = img.url_name %>  
                                        <% } %>  
                                    <%})%>
                                    <img src=/images/users/<%=urlImg%> > 
                                </a>
                                <div class="description">
                                    <h4> <%= element['userName'] %> </h4>   
                                    <p class="name"><%=element.name%><%=element.lastName%></p>
                                    <p class="email"> <%= element.email %> </p>
                                    <p class="birthday-date"><%= element.date_of_birth %> </p>
                                </div>
                                <form action="/users/<%=element.id%>?_method=DELETE" method="POST">
                                    <button type="submit" class="bt-delete">ELIMINAR</button>
                                </form>
                            </article>
                    <% }) %>
            </section>
        </main>
        <%- include('../partials/footer') %> 
    </body>    
</html>