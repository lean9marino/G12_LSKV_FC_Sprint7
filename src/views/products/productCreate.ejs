<!DOCTYPE html>
<html lang="es">
    <%- include( '../partials/head') %>
    <body>
        <%- include('../partials/header') %>
        <main class="charger">
            <div>
                <form action="/products/" method="POST" enctype="multipart/form-data">
                    <fieldset class="form-prod-char">
                        <legend class="legend-formulario">Crear producto</legend>
                        
                        <label for="name">Nombre:
                            <input type="text" 
                                id="name"
                                name="name" 
                                class="name"
                                value="<%= locals.oldData ? oldData.name : null%>">
                                <% if (locals.errors && errors.name){ %>
                                    <div class="text-danger" style="width: 100%">
                                        <%= errors.name.msg %> 
                                    </div>
                                <% } %>
                                <div class="text-danger-name" style="width: 100%"></div>
                        </label>
                        
                        <label for="price">Precio:
                            <input type="number" 
                                name="price" 
                                id="price" 
                                class="price"
                                value="<%= locals.oldData ? oldData.price : null%>">
                                <% if (locals.errors && errors.price){ %>
                                    <div class="text-danger" style="width: 100%">
                                        <%= errors.price.msg %> 
                                    </div>
                                <% } %>
                                <div class="text-danger-price" style="width: 100%"></div>
                        </label>
                        
                        <label for="category">Categoria: 
                            <select name="category" id="category" class="category">
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.id %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                            <% if (locals.errors && errors.category){ %>
                                <div class="text-danger" style="width: 100%">
                                    <%= errors.category.msg %> 
                                </div>
                            <% } %>
                            <div class="text-danger-category" style="width: 100%"></div>
                         </label>

                         <label for="Style">Estilos: 
                            <select name="Style" id="Style" class="styles">
                                <% styles.forEach(style => { %>
                                    <option value="<%= style.id %>"><%= style.name %></option>
                                <% }) %>
                            </select>
                            <div class="text-danger-style" style="width: 100%"></div>
                         </label>
                        
                        <label for="color">Colores:
                            <div class="color">
                                <% colours.forEach(colour => { %>
                                    <div class="check-c-s">
                                        <%if(locals.oldData && oldData.color.includes(`${colour.id}`)) { %>
                                            <input class="chk chk-color" 
                                            type="checkbox"
                                            value='<%=colour.id%>' 
                                            name="color" 
                                            id="colour<%=colour.id %>" checked>
                                            <label class="lbl" for = "colour<%=colour.id %>">
                                                <img src = "/images/colores/<%= colour.urlColour %>.jpg">
                                            </label>
                                        
                                            <% }else{ %> 
                                            <input class="chk chk-color" type="checkbox" value="<%=colour.id %>" name="color" id="colour<%=colour.id %>">
                                            <label class="lbl" for = "colour<%=colour.id %>">
                                                <img src = "/images/colores/<%= colour.urlColour %>.jpg">
                                            </label> 
                                        <% }; %>
                                    </div>
                                <% }) %>
                            </div>
                            <% if (locals.errors && errors.color) { %>
                                <div class="text-danger" style="width: 100%">
                                    <%= errors.color.msg %> 
                                </div>
                            <% } %>
                            <div class="text-danger-color" style="width: 100%"></div>
                        </label>
                        
                        <label for="sizes">Talles:
                            <div class="size">
                                <% sizes.forEach(size => { %>
                                    <div class="check-size">
                                        <% if(locals.oldData && oldData.sizes.includes(`${size.id}`) ) { %>
                                            <input class="chk chk-size"
                                            type="checkbox" 
                                            value="<%= size.id %>" 
                                            name="sizes" 
                                            id ="size<%= size.id %>" checked>
                                            <label class="lbl" for = "size<%= size.id %>"><%= size.name %></label>
                                        <% }else{ %> 
                                            <input class="chk" type="checkbox" value="<%= size.id %>"  name="sizes" id ="size<%= size.id %>">
                                            <label class="lbl" for = "size<%= size.id %>"><%= size.name %></label>
                                        <% } %> 
                                    </div>
                                <% }) %> 
                            </div>
                            <% if (locals.errors && errors.sizes) { %>
                                <div class="text-danger" style="width: 100%">
                                    <%= errors.sizes.msg %> 
                                </div>
                            <% } %>
                            <div class="text-danger-size" style="width: 100%"></div>
                        </label>

                        <label for="image"> Ingrese la imagen principal:
                            <input type="file" 
                                id="image" 
                                name="image"
                                class="imagesPrinSec">
                                <% if (locals.errors && errors.image) { %>
                                    <div class="text-danger" style="width: 100%">
                                        <%= errors.image.msg %> 
                                    </div>
                                <% } %>
                                <div class="text-danger-img" style="width: 100%"></div>
                        </label>
                        
                        <label for="images">Imagenes secundarias:
                            <input type="file" name="images" id="images" class="imagesPrinSec" require multiple>
                            <div class="text-danger-img" style="width: 100%"></div>
                        </label>
                            
                         <label for="description">Descripci√≥n:
                            <textarea name="description" 
                                id="description" 
                                cols="30" 
                                rows="5" 
                                class="description"><%= locals.oldData ? oldData.description : null%></textarea>
                                <% if (locals.errors && errors.description) { %>
                                    <div class="text-danger" style="width: 100%">
                                        <%= errors.description.msg %>
                                    </div>
                                <% } %>
                                <div class="text-danger-description" style="width: 100%"></div>
                        </label> 

                        <div class="bt">
                            <button type="submit" class="style-button">Crear</button>
                        </div>

                    </fieldset>
                </form>
            </div>
        </main>
        <%- include('../partials/footer') %>
        <script src="/js/validation-create-products.js"></script>
    </body>  